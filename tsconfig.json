{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "архив"],
  "exclude": ["node_modules"]
}
